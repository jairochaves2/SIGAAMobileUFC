<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.sigaamobile.sigaamobile.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/provas"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignEnd="@+id/sigaa"
                android:layout_alignRight="@+id/sigaa"
                android:layout_below="@+id/sigaa"
                android:layout_marginTop="39dp"
                android:background="@drawable/provas_botao"
                android:onClick="launchtabs" />

            <Button
                android:id="@+id/sigaa"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/appBarLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:background="@drawable/sigaa_butao"
                android:elevation="0dp"
                android:onClick="launchtabs" />

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </android.support.design.widget.AppBarLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
